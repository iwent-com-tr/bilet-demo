############################################
# Backend Environment Example (Do not commit)
############################################

# App
ENVIRONMENT="development"
VERSION="1.0.0"
PORT=3000
API_PREFIX="/api/v1"
CLIENT_ORIGIN="http://localhost:5173"
PUBLIC_BASE_URL="http://localhost:5173"
BASE_URL="http://localhost:5173"
HOST="http://localhost:5173"

# Security / JWT
JWT_ACCESS_SECRET="change-me"
JWT_REFRESH_SECRET="change-me"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
BCRYPT_SALT_ROUNDS="12"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_WEBHOOK_DEV="http://localhost:3000/auth/google/callback"
GOOGLE_WEBHOOK_PROD="https://your-domain.com/auth/google/callback"

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/iwent"

# Email
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="noreply@example.com"

# Twilio (optional)
TWILIO_ACCOUNT_SID="your_sid_here"
TWILIO_AUTH_TOKEN="your_auth_token_here"
TWILIO_VERIFY_SERVICE_SID="your_verify_service_sid"
TWILIO_PHONE_NUMBER="+1234567890"

# OpenAI (optional)
OPENAI_API_KEY=null

# MeiliSearch
MEILI_HOST="http://127.0.0.1:7700"
MEILISEARCH_MASTER_KEY="your-meili-master-key"

# Redis (optional)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
NOTIFICATION_WORKER_CONCURRENCY=200

# Web Push (optional)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:ops@example.com"

# OneSignal (optional)
ONESIGNAL_APP_ID="your-onesignal-app-id"
ONESIGNAL_API_KEY="your-onesignal-api-key"
ONESIGNAL_WEBHOOK_SECRET="your-onesignal-webhook-secret"

# Optional Push Settings
PUSH_CONCURRENCY_LIMIT="10"
PUSH_TTL_DEFAULT="86400"
PUSH_RETRY_ATTEMPTS="3"
PUSH_RETRY_DELAY="5000"

# Populator
POPULATOR_ORGANIZER_ID="baf5273a-2c2b-4fea-9b3f-d8c169ac6d7a"
POPULATOR_EVENT_COUNT="100"

# VAPID keys for Web Push notifications
VAPID_PUBLIC_KEY="your_vapid_public_key_here"
VAPID_PRIVATE_KEY="your_vapid_private_key_here"
VAPID_SUBJECT="mailto:your-email@example.com"

# Redis configuration for BullMQ queue
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379

# Notification worker configuration
NOTIFICATION_WORKER_CONCURRENCY=200
START_WORKER=false


