# Production Environment Variables for iWent Backend
# Copy this file to .env and fill in your actual values

# ===========================================
# BASIC CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3001
API_PREFIX=/api/v1

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL=postgresql://user:password@your-db-host:5432/iwent_production?schema=public

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT secret for token signing (use a strong, random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS origins (comma-separated list of allowed origins)
CORS_ORIGIN=https://iwent.com.tr,https://www.iwent.com.tr,https://admin.iwent.com.tr

# ===========================================
# PUSH NOTIFICATIONS - ONESIGNAL
# ===========================================
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# ===========================================
# PUSH NOTIFICATIONS - VAPID (Web Push)
# ===========================================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# ===========================================
# REDIS (Queue & Caching)
# ===========================================
# Redis connection URL
# Format: redis://username:password@host:port
REDIS_URL=redis://your-redis-host:6379

# Queue configuration
NOTIFICATION_WORKER_CONCURRENCY=5
QUEUE_REDIS_DB=1

# ===========================================
# FILE UPLOADS
# ===========================================
# Upload path (use cloud storage in production)
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# AWS S3 Configuration (if using S3 for uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1
S3_BUCKET_NAME=iwent-uploads
S3_PUBLIC_URL=https://your-bucket.s3.eu-west-1.amazonaws.com

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Health check configuration
HEALTH_CHECK_TIMEOUT=5000

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Pexels API (for image services)
PEXELS_API_KEY=your-pexels-api-key

# Email service (if using email notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@iwent.com.tr

# ===========================================
# DEVELOPMENT/TESTING (remove in production)
# ===========================================
# Additional origins for testing
ADDITIONAL_ORIGINS=

# Debug settings
DEBUG_NOTIFICATIONS=false
DEBUG_QUEUE=false 